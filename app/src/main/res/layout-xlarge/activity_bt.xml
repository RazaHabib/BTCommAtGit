<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BTActivity"
    android:id="@+id/screen"
    android:background="#ffafc296">

    <TextView
        android:text="Bluetooth File Transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ffd42429" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Bluetooth"
        android:id="@+id/buttonBluetoothEnable"

        android:layout_marginTop="31dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Bonded Devices"
        android:id="@+id/buttonBondedDevices"

        android:layout_marginTop="79dp"
        android:layout_below="@+id/buttonBluetoothEnable"
        android:layout_alignRight="@+id/buttonBluetoothDisable"
        android:layout_alignEnd="@+id/buttonBluetoothDisable"
        android:layout_marginRight="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Bluetooth"
        android:id="@+id/buttonBluetoothDisable"


        android:layout_above="@+id/buttonBondedDevices"
        android:layout_toRightOf="@+id/buttonBluetoothEnable"
        android:layout_marginLeft="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Phone Discovery "
        android:id="@+id/buttonEnablePhoneDiscovery"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/buttonBluetoothDisable"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/buttonBondedDevices"
        android:layout_alignRight="@+id/buttonBluetoothDisable"
        android:layout_alignEnd="@+id/buttonBluetoothDisable" />

</RelativeLayout>
