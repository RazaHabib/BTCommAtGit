<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BTActivity"
    android:id="@+id/screen"
    android:background="#ffafc296">

    <TextView
        android:text="Bluetooth File Transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ffd42429" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Bluetooth"
        android:id="@+id/buttonBluetoothEnable"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Bonded Devices"
        android:id="@+id/buttonBondedDevices"

        android:layout_marginTop="74dp"
        android:layout_below="@+id/buttonBluetoothEnable"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Bluetooth"
        android:id="@+id/buttonBluetoothDisable"


        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Phone Discovery "
        android:id="@+id/buttonEnablePhoneDiscovery"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/buttonBluetoothEnable"
        android:layout_alignBaseline="@+id/buttonBluetoothEnable"
        android:layout_alignBottom="@+id/buttonBluetoothEnable"
        android:layout_toLeftOf="@+id/buttonBluetoothEnable" />

</RelativeLayout>
